<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lawgrid="clr-namespace:LAWgrid;assembly=LAWgrid"

        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="800" Height="500"
        x:Class="GridTestBed.MainWindow"
        Title="GridTestBed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- LAWGrid in top 80% -->
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
            <lawgrid:LAWgrid Width="800" x:Name="TheGridInTest"/>
        </Border>
        
        <!-- Button panel in bottom 20% -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- First row of buttons -->
            <Button Grid.Row="0" Grid.Column="0" Content="Button 1" Margin="5"/>
            <Button Grid.Row="0" Grid.Column="1" Content="Button 2" Margin="5"/>
            <Button Grid.Row="0" Grid.Column="2" Content="Button 3" Margin="5"/>
            
            <!-- Second row of buttons -->
            <Button Grid.Row="1" Grid.Column="0" Content="Button 4" Margin="5"/>
            <Button Grid.Row="1" Grid.Column="1" Content="Button 5" Margin="5"/>
            <Button Grid.Row="1" Grid.Column="2" Content="Button 6" Margin="5"/>
        </Grid>
    </Grid>
</Window>
